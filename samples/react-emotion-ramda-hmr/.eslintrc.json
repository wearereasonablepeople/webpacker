{
  "root": true,
  "extends": ["warp/es6", "warp/jsx"],
  "plugins": ["emotion", "babel"],
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "parserOptions": {
    "babelOptions": {
      "configFile": "./babel.config.js"
    }
  },
  "globals": {
    "require": true,
    "process": true,
    "module": true
  },
  "rules": {
    "max-len": ["error", {
      "tabWidth": 2,
      "code": 140
    }],
    "react/jsx-tag-spacing": 0,
    "class-methods-use-this": 0
  }
}
